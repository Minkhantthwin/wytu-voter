FROM node:20-alpine

WORKDIR /app

# Install dependencies for both backend and frontend
COPY package*.json ./
RUN npm install

COPY client/package*.json ./client/
RUN cd client && npm install

# Copy Prisma schema
COPY prisma ./prisma/
RUN npx prisma generate

# Copy source files
COPY . .

# Expose ports
EXPOSE 3000 5173

# Start development servers
CMD ["sh", "-c", "npm run dev & cd client && npm run dev -- --host"]